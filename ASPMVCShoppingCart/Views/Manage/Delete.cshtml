@model ASPMVCShoppingCart.Models.tblProduct

@{
    ViewBag.Title = "Delete";
}

@*Heading*@
<h2 class="wow slideInLeft">Are you sure you want to delete this?</h2>

<fieldset class="wow slideInLeft">
    <legend>Product</legend>


    <div class="display-field">
        <strong>Make:</strong> @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-field">
        <strong>Price:</strong>  £  @Html.DisplayFor(model => model.Price)
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p style="padding-top:15px;">
            <input class="btn btn-danger" type="submit" value="Delete" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </p>
    }
</fieldset>